<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/string_request"
            android:text="String Request"
            style="@style/button_style"/>
        <Button
            android:id="@+id/image_request"
            android:text="Image Request"
            style="@style/button_style"/>
        <Button
            android:id="@+id/nework_image"
            android:text="Network Image View"
            style="@style/button_style"/>
        <Button
            android:id="@+id/json_object"
            android:text="json_object"
            style="@style/button_style"/>
    </LinearLayout>
    <TextView
        android:id="@+id/result_string"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="CONTENTS"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/result_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.android.volley.toolbox.NetworkImageView
        android:visibility="gone"
        android:id="@+id/result_network_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>